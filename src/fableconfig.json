{
    "outDir": "../out/src",
    "sourceMaps": true,
    "babelPlugins": [
      "transform-runtime"
    ],
    "projFile": [
      "bindings/bindings.fsproj",
      "libraries/libraries.fsproj",
      "thegamma/thegamma.fsproj",
      "main/main.fsproj"
    ],
    "rollup": {
      "format": "umd",
      "external": ["monaco"],
      "globals": {      
        "monaco":"nada"
      },
      "plugins": [
        ["commonjs", {
          "namedExports": {
            "virtual-dom": [ "h", "create", "diff", "patch" ]
          }
        }]
      ]
    }
}
